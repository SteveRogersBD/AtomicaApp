<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <gradient
        android:startColor="#FF6F61"
        android:endColor="#FFA500"
        android:angle="45" />


    <!-- Border (optional) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Padding inside the shape (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
